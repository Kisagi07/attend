{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "next-auth/*": ["./node_modules/next-auth/*"],
      "@helper/*": ["./app/helper/*"],
      "@components/*": ["./app/components/*"],
      "@components": ["./app/components/index"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "models/user.js",
    "migrations/20240124085644-create-user.ts",
    "migrations/20240125041904-create-user.js",
    "babel.config.js",
    "app/components/plainFall.js"
, "vite.config.mts"  ],
  "exclude": ["node_modules"]
}
